<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    android:orientation="horizontal">

    <!-- Declares a button that starts 3nd activity -->
    <Button
        android:id="@+id/btn_start_second_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnStartThirdActivityClicked"
        android:text="Start Third Activity" />

    <!-- Declares a button that opens a camera -->
    <Button
        android:id="@+id/btn_select_contact"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:onClick="btnStartCamera"
        android:text="Start Camera" />


</LinearLayout>

